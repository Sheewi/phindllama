# Environment configuration template
# Copy this file to .env and fill in your actual values

# Blockchain configuration
WEB3_PROVIDER_URI=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
INFURA_KEY=your_infura_key_here
WALLET_ADDRESS=0xYourWalletAddress

# Cloud configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Google Cloud (if using)
GCP_PROJECT=your_gcp_project
MODEL_BUCKET=your_model_bucket

# Database configuration
DATABASE_URL=postgresql://user:password@localhost:5432/phindllama
METRICS_DB_URL=postgresql://user:password@localhost:5432/phindllama_metrics

# Redis configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Application configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# API configuration
PHINDLLAMA_MODEL=phindllama-7b
WEBUI_PORT=8080

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# External APIs
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Grant sources
STARTUP_GRANTS_API_KEY=your_startup_grants_api_key
CRYPTO_GRANTS_API_KEY=your_crypto_grants_api_key
